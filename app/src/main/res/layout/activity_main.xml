<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TabHost
        android:id="@+id/tbhparcia_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/ContadorAgua"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbltitulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SUMINISTRO DE AGUA"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/TXTcantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:hint="Cantidad"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/LblRespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TXTcantidad"
                        android:layout_marginTop="110dp"
                        android:text="Respuesta: " />

                    <Button
                        android:id="@+id/btnCalcular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LblRespuesta"
                        android:layout_marginTop="34dp"
                        android:text="Calcular"
                        android:textColor="@color/white"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDe"
                        android:text="De:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner

                        android:id="@+id/cboDel"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/unidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lblAL"
                        android:text="A:"
                        android:layout_below="@id/lblDe"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <Spinner
                        android:id="@+id/cboA"
                        android:layout_below="@id/cboDel"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/unidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txtCantidadA"
                        android:layout_below="@id/lblAL"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                    <TextView
                        android:id="@+id/lblRespuestaA"
                        android:layout_below="@id/txtCantidadA"
                        android:text="Respuesta: ?"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnCalcularA"
                        android:layout_below="@id/lblRespuestaA"
                        android:layout_marginTop="40dp"
                        android:text="Convertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>